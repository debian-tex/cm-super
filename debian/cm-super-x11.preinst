#!/bin/sh -e

#
# we remove the intermediate X11R7 .scale file as this approach never 
# entered testing and the period was quite short.

case "$1" in
    upgrade|install)
	set -e
	rm -f /etc/X11/fonts/X11R7/Type1/cm-super-x11.scale
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


#DEBHELPER#

exit 0
